
<h2><%= @qrcode.name %></h2>

<% if @qrcode.photo.exists? %>

<%= image_tag(@qrcode.photo.url) %>

<% else %>
  None
<% end %>

<ul>
<% @qrcode.groups.each do |g| %>
  <li>單位: <%= g.name %></li>
<% end %>
</ul>
<p> 代碼: <%= @qrcode.code %> </p>

<p>詳細內容: <%= simple_format(@qrcode.description) %> </p>

<p>表頭總類: <%= @qrcode.category_name %><p>

<p>表頭位置: <%= @qrcode.location_name %></p>

<p><%= link_to '回到主選單', qrcodes_path, :class => "btn btn-default"  %></p>
