<h1> Qrcode List </h1>

<table class="table">

<% @qrcodes.each do |e| %>

  <tr>
    <td>
 	  <%= e.code %>
    </td>

    <td class="btn-group">
 	   <%= link_to "Show", qrcode_path(e)  ,:class => " btn btn-primary active "%>
 	   <%= link_to "Edit", edit_qrcode_path(e),:class => " btn btn-success active " %>
 	   <%= link_to "Delete", qrcode_path(e), :method => :delete, :class => "btn btn-danger active"%>
    </td>

     <td class="btn-group">
      <%= link_to 'attendees', qrcode_attendees_path(e), :class => "btn btn-default"  %>
	    <%= link_to 'location', qrcode_location_path(e), :class => "btn btn-default"  %>
     </td>

  </tr>
<% end %>

</table>

<table>
<%= link_to 'New Qrcodes', new_qrcode_path, :class => "btn btn-default"  %>
</table>
<%= paginate @qrcodes %>
